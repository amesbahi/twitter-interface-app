    ul.app--message--list
    each message in messagesArray
        li
          h3
            | Conversation with 
            a #{message.recipient}
          ul.app--message--conversation
            li.app--message
              .app--avatar(style='background-image: url(' + myProfileImageUrl + ')')
                img(src=myProfileImageUrl)
              p.app--message--text #{message.text}
              p.app--message--timestamp #{message.dateSent}
